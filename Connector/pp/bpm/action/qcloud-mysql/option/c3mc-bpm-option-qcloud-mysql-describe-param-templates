#!/usr/bin/env /data/Software/mydan/python3/bin/python3
# -*- coding: utf-8 -*-

import json
import sys
import subprocess

sys.path.append("/data/Software/mydan/Connector/lib/pp")


def get_data_list(access_id, access_key, region, engine_type, engine_version):
    from c3mc_cloud_qcloud_cdb import QcloudCdb

    return QcloudCdb(access_id, access_key, region).DescribeParamTemplates(engine_type, engine_version)


def main(params):
    """查询可用区列表
    """
    account = params["account"]
    engine_type = params["engine_type"]
    engine_version = params["engine_version"]

    key_info = json.loads(
        subprocess.getoutput(f"c3mc-get-account-info qcloud {account}")
    )
    # 2022-03-27。腾讯查询参数模板接口目前只支持 ap-guangzhou, ap-singapore
    data_list = get_data_list(
        key_info["access_id"], key_info["access_key"], "ap-guangzhou", engine_type, engine_version)
    for item in data_list:
        print(json.dumps(item, default=str))


if __name__ == '__main__':
    l = list(sys.stdin)
    if not l or len(l) > 1:
        raise type('WrongInputData', (Exception,), {})('数据格式不对, 需要一行json字符串"')

    main(json.loads(l[0]))
