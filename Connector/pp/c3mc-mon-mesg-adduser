#!/data/Software/mydan/perl/bin/perl
use strict;
use warnings;

$|++;

use YAML::XS;

=head1 SYNOPSIS

 $0

=cut

local $/ = undef;
my @data = YAML::XS::Load( my $x = <STDIN> );
local $/ = "\n";

my @out;
sub adduser
{
    my $data = shift @_;
    return unless $data && ref $data eq 'HASH' && defined $data->{'labels.fromtreeid'} && $data->{'labels.fromtreeid'} =~ /^\d+$/;

    my @user = `c3mc-base-db-get user --table openc3_monitor_config_user --filter 'projectid=$data->{"labels.fromtreeid"}' | c3mc-app-usrext`;
    chomp @user;

    return unless @user;

    $data->{to} = \@user;
    push @out, $data;
}

map{ adduser($_ ) }@data;

print YAML::XS::Dump @out;
