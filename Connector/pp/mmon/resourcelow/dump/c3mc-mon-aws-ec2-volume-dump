#!/data/Software/mydan/perl/bin/perl
use strict;
use warnings;

$|++;

=head1 SYNOPSIS

 $0

=cut

my @col = qw( 实例ID 服务树 业务负责人 容量 类型 _vmuuid_ );
my $col = join " ", @col;
my @x = `c3mc-device-data-get curr storage aws-ec2-volume $col`;
die "get data fail" if $?;
chomp @x;

my @mon = ();

my %mon;
for my $mon ( @mon )
{
    my @xx = `c3mc-mon-aws-ec2-volume-${mon}-dump`;
    die "get aws-ec2-volume $mon fail" if $?;
    chomp @xx;
    for ( @xx )
    {
        my ( $instance, $val ) = split /\t/, $_;
        $mon{$mon}{$instance} = $val;
    }
}

printf "%s\n", join "\t", @col, @mon;
for my $x ( @x )
{
    my ( $instance ) = split /\t/, $x;
    $instance =~ s/.*:db://;
    printf "%s\n", join "\t", $x, map{ $mon{$_} && defined $mon{$_}{$instance} ? $mon{$_}{$instance} : 'unkown' }@mon;
}
